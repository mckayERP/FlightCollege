+			if (isMultiSelection())
+				rsm.addSelectionInterval(leadRow, leadRow);
+			else
+				rsm.setSelectionInterval(leadRow, leadRow);
+		}
+		
+		//  In case
+		if (this.getShowTotals())
+		{
